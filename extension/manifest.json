{
    "manifest_version": 3,
    "name": "Producer.ai Download Suite",
    "version": "3.2",
    "author": "ransomletter",
    "description": "Complete downloading toolkit: Bulk Tracks, Stems (Zip/Folder), and Organized Outputs.",
    "permissions": [
        "activeTab",
        "scripting",
        "downloads"
    ],
    "host_permissions": [
        "https://www.producer.ai/*"
    ],
    "background": {
        "service_worker": "background.js"
    },
    "action": {
        "default_popup": "popup.html"
    },
    "content_scripts": [
        {
            "matches": [
                "https://www.producer.ai/*"
            ],
            "css": [
                "styles.css"
            ],
            "js": [
                "content.js"
            ]
        }
    ]
}